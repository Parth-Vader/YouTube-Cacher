use youbox_db;

drop table if exists config  ;
drop table if exists incache ;
drop table if exists requests;
drop table if exists storage ;

create table incache( vid varchar(100), since datetime, lastused datetime, timesused integer, primary key(vid));
create table requests( rid integer not null auto_increment,vid varchar(100),requester varchar(100), rtime datetime,foundat varchar(100), link varchar(1000), dtime datetime,log varchar(1000), primary key(rid));
create table config( field varchar(100), value varchar(1000), primary key (field));
create table storage( vid varchar(100), mem int, primary key(vid));